#include <stdio.h>
#include <string.h>

int main()
{
    int i, j, correct;
    char email[50];
    char domain[50];
    int l = 0;

    printf("Enter your email: ");
    scanf(" %49s", email);

    while(1)
    {
        int length = strlen(email);
        correct = 0;

        for(i = 0; i < length; i++)
        {
            if(email[i] == '@')
            {
                correct = 1;
                j = i + 1;
                break;
            }
        }

        if(correct == 1)
        {
            break;
        }

        printf("Incorrect email, try again.\n");
        printf("Enter your email: ");
        scanf(" %49s", email);
    }

    while(email[j] != '\0')
    {
        domain[l] = email[j];
        j++;
        l++;
    }
    domain[l] = '\0';  

    printf("\nThe domain is: %s\n", domain);

    return 0;
}
