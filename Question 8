#include <stdio.h>

int main() {
    
    int i, j;
    
    char categories[3][30] = {"Appetizers", "Main Course", "Desserts"};

    char items[3][3][50] = {
        {"Spring Rolls", "Garlic Bread", "Chicken Soup"},        
        {"Grilled Chicken", "Beef Steak", "Pasta Alfredo"},     
        {"Ice Cream", "Brownie", "Cheesecake"}                   
    };

    float prices[3][3] = {
        {6.50, 4.75, 9.99},       
        {12.99, 18.50, 14.25},   
        {3.99, 7.50, 8.25}        
    };

    printf("\n================= RESTAURANT MENU =================\n\n");

    for(i = 0; i < 3; i++) {
        printf("----- %s -----\n", categories[i]);
        
        for(j = 0; j < 3; j++) {
            printf("%-20s  $%.2f\n", items[i][j], prices[i][j]);
        }
        
        printf("\n");
    }

    printf("=========== Budget-Friendly Options (Under $10) ===========\n\n");

    int found = 0;

    for(i = 0; i < 3; i++) {
        for(j = 0; j < 3; j++) {
            if(prices[i][j] < 10.0) {
                printf("%s - %-15s  $%.2f\n", categories[i], items[i][j], prices[i][j]);
                found = 1;
            }
        }
    }

    if(!found) {
        printf("No budget-friendly items available.\n");
    }

    printf("\n===========================================================\n");

    return 0;
}
