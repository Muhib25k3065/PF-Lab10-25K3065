#include <stdio.h>
#include <string.h>

int main() {
    int n, i;
    
    printf("Enter number of students: ");
    scanf("%d", &n);
    getchar();

    char names[n][50]; 
    int marks[n];      

    for(i = 0; i < n; i++) {
        printf("Enter name of student %d: ", i+1);
        fgets(names[i], 50, stdin);
        names[i][strcspn(names[i], "\n")] = '\0';

        printf("Enter marks of %s: ", names[i]);
        scanf("%d", &marks[i]);
        getchar(); 
    }

    printf("\nStudent Marks:\n\n");
    printf("%-25s %s\n", "Name", "Marks");
    printf("----------------------------\n");

    for(i = 0; i < n; i++) {
        printf("%-25s %d\n", names[i], marks[i]);
    }

    int maxIndex = 0;
    int sum = 0;
    for(i = 0; i < n; i++) {
        if(marks[i] > marks[maxIndex]) {
            maxIndex = i;
        }
        sum += marks[i];
    }

    double average = (double)sum / n;

    printf("\nHighest Scorer: %s with %d marks\n", names[maxIndex], marks[maxIndex]);
    printf("Average Marks: %.2lf\n", average);

    return 0;
}
