#include <stdio.h>
#include <string.h>

void encrypt(char str[])
{
    int i;
    for(i = 0; str[i] != '\0'; i++)
    {
        char ch = str[i];

        if(ch >= 'a' && ch <= 'z')
        {
            ch = ((ch - 'a' + 3) % 26) + 'a';
        }
        else if(ch >= 'A' && ch <= 'Z')
        {
            ch = ((ch - 'A' + 3) % 26) + 'A';
        }

        str[i] = ch;
    }
}

void decrypt(char str[])
{
    int i;
    for(i = 0; str[i] != '\0'; i++)
    {
        char ch = str[i];

        if(ch >= 'a' && ch <= 'z')
        {
            ch = ((ch - 'a' - 3 + 26) % 26) + 'a';
        }
        else if(ch >= 'A' && ch <= 'Z')
        {
            ch = ((ch - 'A' - 3 + 26) % 26) + 'A';
        }

        str[i] = ch;
    }
}

int main()
{
    char message[200];

    printf("Enter a message: ");
    fgets(message, sizeof(message), stdin);

    message[strcspn(message, "\n")] = '\0';

    encrypt(message);
    printf("Encrypted: %s\n", message);

    decrypt(message);
    printf("Decrypted: %s\n", message);

    return 0;
}
